{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "backend/package.json",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "src/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/src/server.js"
        },
        {
            "src": "/outputs/(.*)",
            "dest": "backend/src/server.js"
        },
        {
            "src": "/cache/(.*)",
            "dest": "backend/src/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}