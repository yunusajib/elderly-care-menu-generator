# Server Configuration
PORT=5000
NODE_ENV=development

# API Keys (REQUIRED)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Directory Configuration
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
CACHE_DIR=./cache

